{
  "compilerOptions": {
    // We never emit JS code (only type declarations) from TSC, so ignore those
    // options.
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "lib": ["es2020", "dom"]
  },
  "include": [
    "benchmark",
    "example-runner",
    "generator",
    "integration-test",
    "script",
    "spec-compliance-tests",
    "src",
    "test",
  ],
  "exclude": [
    "benchmark/sample",
    "example-runner/example-repos",
    "integration-test/test-cases",
    "spec-compliance-tests/test262/test262-checkout",
    "spec-compliance-tests/babel-tests/babel-tests-checkout"
  ]
}
