{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "es2017",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "lib": ["es2017"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "dist/**/*",
    "build/**/*"
  ]
}
