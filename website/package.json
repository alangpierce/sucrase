{
  "name": "sucrase-website",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://sucrase.io",
  "dependencies": {
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/standalone": "^7.2.5",
    "@sucrase/webpack-loader": "^2.0.0",
    "@types/base64-js": "^1.2.5",
    "@types/gzip-js": "^0.3.1",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-virtualized": "^9.18.11",
    "aphrodite": "^2.2.3",
    "babel-core": "6.25.0",
    "babel-jest": "20.0.3",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-runtime": "6.26.0",
    "base64-js": "^1.3.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "chalk": "1.1.3",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "fs-extra": "3.0.1",
    "gzip-js": "^0.3.2",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "jest": "20.0.4",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "react": "^16.7.0",
    "react-dev-utils": "^7.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^4.6.3",
    "react-monaco-editor": "^0.22.0",
    "react-virtualized": "^9.21.0",
    "style-loader": "^0.23.1",
    "sucrase": "^3.8.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.2",
    "webpack-dev-server": "2.8.2",
    "webpack-manifest-plugin": "^2.0.4",
    "worker-loader": "^2.0.0"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node --max-old-space-size=8192 scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "publish-website": "scripts/publish.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  }
}
